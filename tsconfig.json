{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "declarationDir": "./dist/",
      "removeComments": false,
      "pretty": true,
      "newLine": "LF",
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "sourceMap": true,
      "skipLibCheck": true,
      //"allowJs": true,
      "noImplicitAny": false,
      "jsx": "preserve"
    },
  "include": [
    "src/**/*.ts",
    "src/*.ts"
  ],
    "exclude": [
      "node_modules"
    ],
    "typeAcquisition": {
        "enable": true
    }
}